<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="520"
             MinHeight="400" HorizontalAlignment="Left">

  <UserControl.Styles>
    <Style Selector="ScrollViewer">
      <Setter Property="BorderBrush" Value="Blue" />
      <Setter Property="BorderThickness" Value="1" />
    </Style>
  </UserControl.Styles>

  <ScrollViewer>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="80" />
        <ColumnDefinition Width="320" />
        <ColumnDefinition Width="120" />
      </Grid.ColumnDefinitions>

      <Panel Grid.Column="0">        
        <TextBlock Name="addressBox" IsEnabled="true"></TextBlock>
      </Panel>
      <Panel Grid.Column="1">
        <TextBlock  Name="hexBox" IsEnabled="true" ></TextBlock>
      </Panel>
      <Panel Grid.Column="2">
        <TextBlock Name="asciiBox"></TextBlock>
      </Panel>
    </Grid>
  </ScrollViewer>


</UserControl>